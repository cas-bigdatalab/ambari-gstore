<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>GSTORE</name>
      <displayName>PiSys-GStore</displayName>
      <comment>a graph based RDF triple store. PiSys's graph storage engine</comment>
      <version>2.0</version>
      <components>
        <component>
          <name>GSTORE_SLAVE</name>
          <displayName>GStore Slave</displayName>
          <category>SLAVE</category>
		      <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/gstore.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
        <component>
          <name>GSTOREMS</name>
          <displayName>GStore Management System</displayName>
          <category>MASTER</category>
          <cardinality>1</cardinality>
          <timelineAppid>gstorems</timelineAppid>
          <commandScript>
            <script>scripts/gstorems.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
      </components>
      <osSpecifics>
        <osSpecific>
          <osFamily>redhat5,redhat6,redhat7</osFamily>
          <packages>
			      <package>
              <name>boost169</name>
            </package>
          </packages>
        </osSpecific>
      </osSpecifics>
	  <quickLinksConfigurations>
        <quickLinksConfiguration>
          <fileName>quicklinks.json</fileName>
          <default>true</default>
        </quickLinksConfiguration>
      </quickLinksConfigurations>
    </service>
  </services>
</metainfo>
